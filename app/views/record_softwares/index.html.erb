<% @record_softwares.each do |record_software| %>
  <tr>
    <td><%= record_software.name %></td>
    <td><%= record_software.contract_date %></td>
    <td><%= record_software.person_name %></td>
    <td><%= record_software.price %></td>
    <td><%= record_software.quantity %></td>
    <td><%= record_software.total_price %></td>
    <td><%= record_software.saler %></td>
    <td><%= link_to '详情', record_software %></td>
    <td><%= link_to '编辑', edit_record_software_path(record_software) %></td>
    <td><%= link_to '删除', record_software, confirm: '确认删除?', method: :delete %></td>
  </tr>
<% end %>
</table>

